<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,2"
    tools:context="com.sjsu.raghu.minesweeper.GameActivity">


    <TableRow>
        <TextView
            android:id="@+id/ctrMines"
            android:layout_column="0"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="35sp"
            android:text="MINES" />

        <ImageButton android:id="@+id/btnRestart"
            android:contentDescription="RESTART"
            android:layout_column="1"
            android:scaleType="center"
            android:padding="5dip"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/ctrTime"
            android:layout_column="2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="35sp"
            android:text="CLOCK" />

    </TableRow>

    <TableRow>
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/MineField"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="3"
            android:stretchColumns="*"
            android:gravity="bottom"
            android:padding="10dp" >
        </TableLayout>
    </TableRow>

    <TableLayout>
        <TextView
            android:id="@+id/gameMessage"
            android:background="@color/colorAccent"
            android:layout_column="1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Game in Progress" />
    </TableLayout>

</TableLayout>
